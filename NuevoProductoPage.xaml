<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUI_Aplicacion.NuevoProductoPage"
             Title="NuevoProductoPage">
    <StackLayout Padding="20">
        <Label Text="Nuevo Producto" FontSize="Title" HorizontalOptions="Center" Margin="0,20,0,20" />
        <Label Text="Nombre:" />
        <Entry Placeholder="Ingrese el nombre" x:Name="Nombre" />
        <Label Text="Cantidad:" />
        <Entry Placeholder="Ingrese la cantidad" x:Name="Cantidad" Keyboard="Numeric" />
        <Label Text="Descripción:" />
        <Editor Placeholder="Ingrese la descripción" x:Name="Descripcion" />
        <HorizontalStackLayout>
            <Button Text="Cancelar" Clicked="OnCancelarClicked" HorizontalOptions="Center" VerticalOptions="CenterAndExpand" />
            <Button Text="Guardar Producto" Clicked="OnAgregarProductoClicked" HorizontalOptions="Center" VerticalOptions="CenterAndExpand" />
        </HorizontalStackLayout>
    </StackLayout>
</ContentPage>